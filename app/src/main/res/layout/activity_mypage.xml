        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/jua"
            android:text="text"
            android:textColor="#00FFFFFF"
            android:textSize="30sp"
